<Page
    x:Class="FluentLauncher.UniversalInstaller.Pages.FinishPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluentLauncher.UniversalInstaller.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:FluentLauncher.UniversalInstaller.Properties"
    d:DataContext="{d:DesignInstance Type=local:FinishPageVM}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Background="DarkSlateGray">
            <Image
                Margin="42"
                VerticalAlignment="Bottom"
                Source="/Assets/icon-pre.png"
                Stretch="Uniform" />
        </Grid>

        <StackPanel Grid.Column="1" Margin="16,24">
            <TextBlock
                x:Name="FinishText"
                FontSize="16"
                Text="{x:Static res:Resources.FinishTitle}"
                TextWrapping="Wrap" />

            <TextBlock
                Margin="0,48,0,0"
                VerticalAlignment="Center"
                Text="{x:Static res:Resources.FinishDescription}"
                TextWrapping="Wrap" />

            <CheckBox
                Margin="0,16,0,0"
                Content="{x:Static res:Resources.OpenLauncher}"
                IsChecked="{Binding OpenLauncher, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</Page>
