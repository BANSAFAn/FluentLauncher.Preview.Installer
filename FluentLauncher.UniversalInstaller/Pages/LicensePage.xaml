<Page
    x:Class="FluentLauncher.UniversalInstaller.Pages.LicensePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluentLauncher.UniversalInstaller.Pages"
    xmlns:res="clr-namespace:FluentLauncher.UniversalInstaller.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:LicensePageVM}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Padding="16"
            BorderBrush="Gray"
            BorderThickness="0,0,0,0.666">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Text="{x:Static res:Resources.LicenseTitle}" />
                <TextBlock Margin="8,8,0,0" Text="{x:Static res:Resources.ReadLicense}" />
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox
                Margin="24,16,24,8"
                AcceptsReturn="True"
                FontFamily="Consolas"
                IsReadOnly="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                Text="{Binding License, Mode=OneTime}"
                TextWrapping="Wrap" />

            <CheckBox
                Grid.Row="1"
                Margin="24,8,24,16"
                Content="{x:Static res:Resources.AcceptLicense}"
                IsChecked="{Binding AcceptedLicense, Mode=TwoWay}" />
        </Grid>
    </Grid>
</Page>
