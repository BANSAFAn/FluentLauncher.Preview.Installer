<Page
    x:Class="FluentLauncher.UniversalInstaller.Pages.ProgressPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluentLauncher.UniversalInstaller.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:FluentLauncher.UniversalInstaller.Properties"
    d:DataContext="{d:DesignInstance Type=local:ProgressPageVM}"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Padding="24"
            BorderBrush="Gray"
            BorderThickness="0,0,0,0.666">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Text="{x:Static res:Resources.ProgressTitle}" />
            </StackPanel>
        </Border>

        <Grid
            Grid.Row="1"
            Margin="24"
            Visibility="{Binding ExceptionVisibility, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock FontWeight="SemiBold" Text="{x:Static res:Resources.InstallError}" />

            <TextBox
                Grid.Row="1"
                Margin="0,16,0,0"
                IsReadOnly="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                Text="{Binding ExceptionText, Mode=OneWay}"
                TextWrapping="Wrap" />
        </Grid>

        <StackPanel
            Grid.Row="1"
            Margin="24"
            Visibility="{Binding ProgressVisibility, Mode=OneWay}">
            <TextBlock Text="{x:Static res:Resources.WaitInstall}" />

            <StackPanel Margin="0,48,0,0">
                <TextBlock>
                    <Run Text="{x:Static res:Resources.Status}" />
                    <Run Text="     " />
                    <Run Text="{Binding ProgressText, Mode=OneWay}" />
                </TextBlock>
                <ProgressBar
                    Height="16"
                    Margin="0,8,0,0"
                    IsIndeterminate="{Binding IsIndeterminate, Mode=OneWay}"
                    Value="{Binding ProgressValue, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
