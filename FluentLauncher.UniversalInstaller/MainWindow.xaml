<Window
    x:Class="FluentLauncher.UniversalInstaller.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FluentLauncher.UniversalInstaller"
    xmlns:res="clr-namespace:FluentLauncher.UniversalInstaller.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Static res:Resources.MainWindowTitle}"
    Width="510"
    Height="397"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    Closing="Window_Closing"
    Icon="/Assets/1.png"
    Loaded="Window_Loaded"
    ResizeMode="CanMinimize"
    Unloaded="Window_Unloaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Frame
            x:Name="Frame"
            Navigated="Frame_Navigated"
            NavigationUIVisibility="Hidden" />

        <Border
            Grid.Row="1"
            Padding="16"
            BorderBrush="Gray"
            BorderThickness="0,0.666,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Grid.Column="2"
                        Width="72"
                        Command="{Binding BackCommand}"
                        Content="{x:Static res:Resources.Back}"
                        IsEnabled="{Binding CurrentFrameDataContext.CanBack, Mode=OneWay}" />
                    <Button
                        Grid.Column="2"
                        Width="72"
                        Margin="4,0,0,0"
                        Command="{Binding NextCommand}"
                        CommandParameter="{Binding ElementName=Frame, Path=DataContext}"
                        IsEnabled="{Binding CurrentFrameDataContext.CanNext, Mode=OneWay}">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <Image
                                x:Name="UacImage"
                                Width="14"
                                Height="14"
                                Margin="0,0,4,0"
                                Stretch="Uniform"
                                Visibility="Collapsed" />
                            <TextBlock Text="{Binding NextButtonText, Mode=OneWay}" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Button
                    Grid.Column="2"
                    Width="72"
                    Margin="24,0,0,0"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="{x:Static res:Resources.Cancel}"
                    IsEnabled="{Binding CancelButtonEnable, Mode=OneWay}" />
            </Grid>
        </Border>
    </Grid>
</Window>
